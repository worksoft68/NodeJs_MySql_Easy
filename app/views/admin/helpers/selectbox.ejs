<% 
    selectboxHelper = (name, items, optionSelected = '') => {
        let xhtml = '';
        items.forEach((item) =>{
            let selected = (item.id == optionSelected) ? `selected="selected"` : '';
            let idItem       = (item.id == undefined) ? 'allvalue' : item.id;
            xhtml += `<option value="${idItem}" ${selected} >${item.name}</option>`;
        });
        return `<select name="${name}" class="custom-select custom-select-sm"  >${xhtml}</select>`;
    }
    //parentKey : khóa chính của đối tượng cha
     selectboxAjaxHelper = (items, optionSelected = '', linkPrefix = '', parentKey = '') => {       
        let xhtml = '';
        items.forEach((item) =>{
            let selected = (item.id == optionSelected) ? `selected="selected"` : '';          
            let idItem       = (item.id == undefined) ? 'allvalue' : item.id;
            xhtml += `<option value="${idItem}" ${selected} >${item.name}</option>`;
        });
        return `<select name="item_group" data-iditem ="${parentKey}" data-link="${linkPrefix}change-group"  class="custom-select custom-select-sm"  >${xhtml}</select>`;
    }
%>