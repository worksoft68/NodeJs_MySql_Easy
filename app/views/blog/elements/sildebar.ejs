<%- include ('./../helpers/format-date') %>
<!--  include ./../helpers/customSettings  // Header đã kéo vào rồi, ở đây không cần kéo nữa -->
<%
    const linkPrefix        = systemConfig.prefixBlog;
    const folder_uploads    = 'uploads/articles/';
%>


<div class="col-lg-4">
    <div class="sidebars-area">
        <% if(typeof itemsRandoms !== 'undefined') { %>
       
        <div class="single-sidebar-widget most-popular-widget">
            <h6 class="title"><%- showCustomSettings('Title Sildebar Right 1',itemsCustomSettings);  %></h6>
            <% for(let i = 0; i < itemsRandoms.length; i++){ %>
                <div class="single-list flex-row d-flex">
                    <div class="thumb">
                        <img src="<%= folder_uploads + itemsRandoms[i].thumb %>" alt="<%= itemsRandoms[i].title %>">
                    </div>
                    <div class="details">
                        <a href="<%= linkPrefix %>/articles/<%= itemsRandoms[i].slug %>-<%= itemsRandoms[i].id %>">
                            <h6>
                                <%= itemsRandoms[i].title %>
                            </h6>
                        </a>
                        <ul class="meta">
                            <li>
                                <a href="#"><span class="lnr lnr-calendar-full"></span>
                                    <%= formatDate(itemsRandoms[i].datetime_created) %>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
        <% } %>
        
        <div class="single-sidebar-widget social-network-widget">
             <h6 class="title"><%- showCustomSettings('Title Sildebar Right 2',itemsCustomSettings);  %></h6>
            <ul class="social-list">

            <%- showCustomSettings('Sildebar Right 2',itemsCustomSettings);  %>

                 <!-- <li class="d-flex justify-content-between align-items-center fb">
                     <iframe src="//www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fzendvngroup%2F&amp;tabs=timeline&amp;width=300&amp;height=250&amp;small_header=false&amp;adapt_container_width=true&amp;hide_cover=false&amp;show_facepile=true&amp;appId=372332396559333"
                     width="300" height="250" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowtransparency="true"></iframe>
                 </li> -->
            </ul>
        </div>
    </div>
</div>